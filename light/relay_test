import lgpio
import time

CHIP = 0        # default GPIO chip on Raspberry Pi
PIN = 26        # BCM GPIO number for the relay

# Open the GPIO chip
h = lgpio.gpiochip_open(CHIP)

try:
    # Claim the pin as an output, default LOW (0)
    lgpio.gpio_claim_output(h, PIN, 0)

    print("Relay ON (GPIO 26 HIGH)")
    lgpio.gpio_write(h, PIN, 1)   # set HIGH
    time.sleep(2)

    print("Relay OFF (GPIO 26 LOW)")
    lgpio.gpio_write(h, PIN, 0)   # set LOW
    time.sleep(2)

finally:
    # Always close the chip handle
    lgpio.gpiochip_close(h)
